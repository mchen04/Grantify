{
  "name": "grantify-backend",
  "version": "1.3.0",
  "description": "Backend API for Grantify.ai - AI-powered grant discovery platform with optimized filtering system",
  "main": "src/index.js",
  "scripts": {
    "setup-logs": "node scripts/utils/setup-logs.js",
    "prestart": "npm run setup-logs",
    "predev": "npm run setup-logs",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev:clean": "./scripts/kill-backend.sh && npm run dev",
    "kill": "./scripts/kill-backend.sh",
    "build": "tsc",
    "lint": "eslint src --ext .js,.ts",
    "prebuild": "rimraf dist",
    "postbuild": "copyfiles -u 1 src/**/*.d.ts dist/",
    "grants:load-all": "ts-node scripts/grants-cli.ts load-all",
    "grants:update": "ts-node scripts/grants-cli.ts update",
    "grants:status": "ts-node scripts/grants-cli.ts status",
    "grants:load-source": "ts-node scripts/grants-cli.ts load-source",
    "grants:scheduler": "ts-node scripts/update-grants-scheduler.ts",
    "update:service": "ts-node scripts/update_grants.ts",
    "monitoring": "ts-node scripts/monitoring.ts",
    "update:daily": "ts-node scripts/daily_grants_update.ts",
    "cron:setup": "bash scripts/setup_daily_cron.sh",
    "test:constraint": "node scripts/test-user-interactions-constraint.js",
    "test:constraint:ts": "ts-node scripts/test-user-interactions-constraint.ts",
    "test:filters": "ts-node scripts/test-filters.ts"
  },
  "keywords": [
    "grants",
    "ai",
    "recommendation",
    "api"
  ],
  "author": "Michael Chen",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^9.28.1",
    "@sentry/profiling-node": "^9.28.1",
    "@supabase/supabase-js": "^2.10.0",
    "@types/xml2js": "^0.4.14",
    "axios": "^1.10.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^6.2.0",
    "ioredis": "^5.6.1",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.0.7",
    "ora": "^8.2.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.0.0",
    "@types/node-cache": "^4.1.3",
    "@types/node-cron": "^3.0.11",
    "@types/validator": "^13.15.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
