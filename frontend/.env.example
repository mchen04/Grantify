# ===========================================
# GRANTIFY.AI FRONTEND ENVIRONMENT
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL (without trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:3001
# For production: NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ===========================================
# SUPABASE CLIENT CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# AUTHENTICATION
# ===========================================
# Site URL for authentication redirects
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# For production: NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ===========================================
# SEO & ANALYTICS
# ===========================================
NEXT_PUBLIC_SITE_NAME="Grantify.ai"
NEXT_PUBLIC_SITE_DESCRIPTION="AI-powered grant discovery and matching platform"
NEXT_PUBLIC_SITE_KEYWORDS="grants,funding,ai,recommendations,research,nonprofits"

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google AdSense (optional)
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxx

# ===========================================
# SECURITY
# ===========================================
# CSRF protection
NEXT_PUBLIC_CSRF_ENABLED=true

# ===========================================
# PERFORMANCE
# ===========================================
# Image optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,yourdomain.com,supabase.co

# Cache settings
NEXT_PUBLIC_CACHE_MAX_AGE=3600
NEXT_PUBLIC_SW_CACHE_DURATION=86400

# ===========================================
# FEATURES FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_AI_SEARCH=true
NEXT_PUBLIC_ENABLE_RECOMMENDATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# ===========================================
# DEPLOYMENT SPECIFIC
# ===========================================
# Vercel deployment
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=

# Custom domain
NEXT_PUBLIC_DOMAIN=yourdomain.com