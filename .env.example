# ===========================================
# GRANTIFY.AI ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3001
HOST=localhost

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Optional: Direct database URL (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/grantify

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate a secure random string (min 32 characters)
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRY=30d
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# ===========================================
# CORS & DOMAINS
# ===========================================
# Comma-separated list of additional allowed origins for production
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=5000

# ===========================================
# AI & RECOMMENDATIONS
# ===========================================
GOOGLE_AI_API_KEY=your_google_ai_api_key
RECOMMENDATION_LIMIT=20
RECOMMENDATION_MIN_SCORE=0.3
RECOMMENDATION_WEIGHT_CATEGORY=0.4
RECOMMENDATION_WEIGHT_AGENCY=0.2
RECOMMENDATION_WEIGHT_FUNDING=0.2
RECOMMENDATION_WEIGHT_ELIGIBILITY=0.2

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# ===========================================
# EXTERNAL APIS
# ===========================================
# NIH/Grants.gov configuration (usually defaults are fine)
GRANTS_GOV_USER_AGENT=Grantify.ai/1.0

# ===========================================
# CACHING & REDIS (Optional)
# ===========================================
REDIS_ENABLED=false
# If REDIS_ENABLED=true, configure these:
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ===========================================
# PERFORMANCE & MONITORING
# ===========================================
# Cache TTL in seconds
CACHE_TTL=3600
# Memory warning threshold in MB
MEMORY_WARNING_THRESHOLD=500
# Memory critical threshold in MB
MEMORY_CRITICAL_THRESHOLD=800

# ===========================================
# SSL/TLS (for production)
# ===========================================
SSL_CERT_PATH=/path/to/your/ssl/certificate.crt
SSL_KEY_PATH=/path/to/your/ssl/private.key
SSL_CA_PATH=/path/to/your/ssl/ca_bundle.crt

# ===========================================
# DEPLOYMENT SPECIFIC
# ===========================================
# For Docker deployments
DOCKER_NETWORK=grantify_network
BACKEND_CONTAINER_NAME=grantify-backend
FRONTEND_CONTAINER_NAME=grantify-frontend
NGINX_CONTAINER_NAME=grantify-nginx

# For cloud deployments (AWS, DigitalOcean, etc.)
CLOUD_PROVIDER=aws
REGION=us-east-1
INSTANCE_TYPE=t3.micro

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3