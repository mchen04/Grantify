# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.prod and fill in your production values

# ===========================================
# DOMAIN & SSL
# ===========================================
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# ===========================================
# APPLICATION URLS
# ===========================================
NEXT_PUBLIC_API_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_DOMAIN=yourdomain.com

# ===========================================
# SUPABASE PRODUCTION
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_KEY=your_production_service_key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key

# ===========================================
# SECURITY (GENERATE NEW VALUES)
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars_production_only

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# AI SERVICES
# ===========================================
GOOGLE_AI_API_KEY=your_production_google_ai_api_key

# ===========================================
# SEO & ANALYTICS
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxx

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=warn
MEMORY_WARNING_THRESHOLD=800
MEMORY_CRITICAL_THRESHOLD=1200

# ===========================================
# PERFORMANCE
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
CACHE_TTL=7200

# ===========================================
# BACKUP & DISASTER RECOVERY
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=30